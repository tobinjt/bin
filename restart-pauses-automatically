#!/bin/bash

set -e -f -u -o pipefail

main() {
  local APP="/Applications/Pauses.app"
  local DEST="pauses.restart.plist"
  local LABEL="Pauses.restart"
  local SLEEP_BETWEEN_ATTEMPTS="5"

  if [[ "$#" -eq 0 ]]; then
    main help
  else
    restart-app-automatically "${DEST}" "${APP}" "${LABEL}" \
      "${SLEEP_BETWEEN_ATTEMPTS}" "$@"
  fi
}

main "$@"
