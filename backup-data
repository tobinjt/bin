#!/bin/bash

set -e -f -u -o pipefail

readonly destdir="/Volumes/Backup/"
readonly srcdir="/Volumes/Data/"

if [[ ! -d "${destdir}" ]]; then
  echo "Missing destination: ${destdir}" >&2
  exit 1
fi

if [[ ! -d "${srcdir}" ]]; then
  echo "Missing source: ${srcdir}" >&2
  exit 1
fi

sudo rsync -a --verbose \
  --hard-links \
  --delete \
  --exclude='.*' --exclude='hourly.*' \
  "${srcdir}" "${destdir}"
