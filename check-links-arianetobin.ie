#!/bin/bash

set -e -u -f -o pipefail
DIR="$(mktemp -d /tmp/check-links-XXXXXXXXXX)"
cd "${DIR}"
# --spider
wget \
     --output-file wget.log \
     --execute robots=off \
     --wait 1 \
     --recursive \
     --page-requisites \
     http://www.arianetobin.ie/ || true
log="${DIR}/wget.log"
echo "${log}"
grep --perl-regex 'HTTP request sent, awaiting response... (?!200)' "${log}"
