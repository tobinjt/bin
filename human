#!/usr/bin/env perl

# $Id$

use strict;
use warnings;

use Number::Format qw(format_number format_bytes);
use Regexp::Common;

while (<>) {
    chomp;
    my @parts = split /\b($RE{num}{real})\b/o;
    foreach my $part (@parts) {
        if ($part =~ m/^$RE{num}{real}$/o and $part ne q{.}) {
            # Only humanise if it will help.
            my $format_number = format_number($part);
            if ($format_number eq $part) {
                print $part;
            } else {
                printf q{%s (%s; %s)}, $part, $format_number, format_bytes($part);
            }
        } else {
            print $part;
        }
    }
    print qq{\n};
}
