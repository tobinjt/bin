#!/bin/bash

set -e -u -o pipefail

dotfiles_sources() {
  find "${HOME}/src" -maxdepth 1 -iname '*dotfiles*' -type d
}

main() {
  local IGNORE_FILENAME=".dotfiles.ignore"
  readonly IGNORE_FILENAME
  local dryrun= force= report_unexpected= opt=
  while getopts ":dfhr" opt "$@"; do
    case "${opt}" in
      d)
        dryrun="--dryrun"
        ;;
      f)
        force="--force"
        ;;
      h)
        cat <<END_OF_HELP
Usage: $0 [-d] [-f] [-r]
Links files in ${HOME}/src/*dotfiles* to ${HOME}
Files and directories listed in ${HOME}/src/*dotfiles*/${IGNORE_FILENAME} will
be ignored.  Note: ${IGNORE_FILENAME} lists are global, not scoped to the
directory containing them.

Options:
  -f: force overwrite of files that differ.
  -d: dry run, overrides -f.
  -r: report unexpected files in destination.
END_OF_HELP
        exit 0
        ;;
      r)
        report_unexpected="--report_unexpected_files"
        report_unexpected+=" --ignore_unexpected_children"
        ;;
      *)
        echo "Unrecognised flag: ${opt}" >&2
        exit 1
    esac
  done

  local SKIP_FLAGS="--ignore_pattern=tags --ignore_pattern=*.pyc"
  SKIP_FLAGS+=" --ignore_pattern=*.spl"
  readonly SKIP_FLAGS
  local SKIP_FILES="" dir 
  for dir in $(dotfiles_sources); do
    if [[ -f "${dir}/${IGNORE_FILENAME}" ]]; then
      SKIP_FILES+=" --ignore_file=${dir}/${IGNORE_FILENAME}"
    fi
  done
  readonly SKIP_FILES

  linkdirs ${SKIP_FLAGS} ${SKIP_FILES} ${dryrun} ${force} ${report_unexpected} \
    $(dotfiles_sources) "${HOME}"
  if [ -n "${report_unexpected}" ]; then
    return
  fi
  chmod 600 "${HOME}"/.ssh/*
  chmod 700 "${HOME}"/.ssh
  cat "${HOME}"/.ssh/config-??-* > /dev/null
  cat "${HOME}"/.ssh/config-??-* > "${HOME}/.ssh/config"
  vim -c 'call UpdateBundleHelptags() | call UpdateSpellFiles() | :quit'
}

main "$@"
